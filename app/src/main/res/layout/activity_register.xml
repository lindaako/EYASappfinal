<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="false"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/two"
        tools:Absolutelayout_editor_absoluteX="0dp"
        tools:Absolutelayout_editor_absoluteY="-6dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="133dp"
        android:layout_height="23dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="182dp"
        android:background="@drawable/d"
        android:ems="10"
        android:hint="사용자 이름"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="188dp"
        android:layout_height="22dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="208dp"
        android:background="@color/md_white_1000"
        android:ellipsize="end"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <cyd.awesome.material.AwesomeText
        android:id="@+id/pwd_show_hide"
        android:layout_width="24dp"
        android:layout_height="23dp"
        android:layout_marginStart="408dp"
        android:layout_marginBottom="156dp"
        android:background="@color/md_white_1000"
        android:textColor="#2F4F4F"
        android:textSize="20sp"
        app:awesome_font="material_design"
        app:awesome_icon="MD_VISIBILITY_OFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="164dp"
        android:layout_height="23dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="156dp"
        android:background="@color/md_white_1000"
        android:ems="10"
        android:hint="암호"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="188dp"
        android:layout_height="22dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="131dp"
        android:background="@drawable/f"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="77dp"
        android:layout_height="23dp"
        android:layout_marginStart="352dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/h"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="33dp"
        android:layout_height="22dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bRegister"
        android:layout_width="101dp"
        android:layout_height="22dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/g"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginStart="632dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/a"
        android:onClick="clickexit"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="48dp"
        android:layout_height="23dp"
        android:layout_marginStart="384dp"
        android:layout_marginBottom="182dp"
        android:background="@color/md_white_1000"
        android:ems="10"
        android:hint="나이"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginBottom="105dp"
        android:text="이용 약관에 동의합니다."
        android:textColor="@color/md_white_1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/emailicon"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/passicon"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/ic_key"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>

