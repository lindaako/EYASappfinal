<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/two"
        tools:Absolutelayout_editor_absoluteX="0dp"
        tools:Absolutelayout_editor_absoluteY="-6dp" />


    <EditText
        android:id="@+id/etUsername"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/d"
        android:textColor="#000000"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="사용자 이름"
        android:inputType="textPersonName"
        android:textColorHint="#2F4F4F"
        app:layout_constraintBottom_toTopOf="@+id/etPassword"
        app:layout_constraintEnd_toEndOf="@+id/bLogin"
        app:layout_constraintStart_toStartOf="@+id/bRegister"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/f"
        android:textColor="#000000"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="암호"
        android:inputType="textPassword"
        android:textColorHint="#2F4F4F"
        app:layout_constraintBottom_toTopOf="@+id/bRegister"
        app:layout_constraintEnd_toEndOf="@+id/etUsername"
        app:layout_constraintStart_toStartOf="@+id/etUsername"
        app:layout_constraintTop_toBottomOf="@+id/etUsername" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginStart="632dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/a"
        android:onClick="clickexit"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="201dp"
        android:background="@drawable/h"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/bRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bRegister" />

    <Button
        android:id="@+id/bRegister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="195dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/g"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/etForgotPassword"
        app:layout_constraintEnd_toStartOf="@+id/bLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    <TextView
        android:id="@+id/etForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:text="비밀번호를 잊으 셨나요?"
        android:textColor="@color/bootstrap_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bLogin"
        app:layout_constraintStart_toStartOf="@+id/bLogin"
        app:layout_constraintTop_toBottomOf="@+id/bRegister" />
</android.support.constraint.ConstraintLayout>