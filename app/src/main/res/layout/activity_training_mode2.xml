<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingModeActivity2">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/four"
        tools:Absolutelayout_editor_absoluteX="0dp"
        tools:Absolutelayout_editor_absoluteY="-6dp" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginStart="632dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/a"
        android:onClick="clickexit"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="292dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/bootstrap_default"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="" />

    <Button
        android:id="@+id/bLogout"
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:layout_marginStart="520dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/j"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bBack"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="332dp"
        android:background="@drawable/b"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bMind"
        android:layout_width="138dp"
        android:layout_height="233dp"
        android:layout_marginStart="444dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/p"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bAuditory"
        android:layout_width="138dp"
        android:layout_height="233dp"
        android:layout_marginStart="284dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/o"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bVision"
        android:layout_width="138dp"
        android:layout_height="233dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>